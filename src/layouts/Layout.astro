---
interface Props {
 title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
 <head>
  <meta charset="UTF-8" />
  <meta
   name="description"
   content="Astro description"
  />
  <meta
   name="viewport"
   content="width=device-width"
  />
  <link
   rel="icon"
   type="image/svg+xml"
   href="/favicon.svg"
  />
  <meta
   name="generator"
   content={Astro.generator}
  />
  <link
   rel="preconnect"
   href="https://fonts.googleapis.com"
  />
  <link
   rel="preconnect"
   href="https://fonts.gstatic.com"
   crossorigin
  />
  <link
   href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
   rel="stylesheet"
  />
  <link
   rel="preconnect"
   href="https://fonts.googleapis.com"
  />
  <link
   rel="preconnect"
   href="https://fonts.gstatic.com"
   crossorigin
  />
  <link
   href="https://fonts.googleapis.com/css2?family=Allura&display=swap"
   rel="stylesheet"
  />
  <title>{title}</title>
 </head>
 <body>
  <slot />
 </body>
</html>
<style is:global>
 * {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
 }

 :root {
  --accent: #e4d5c0;
  --accent-light: #e8e3df;
  --accent-dark: #b1a595;
  --accent-darker: #63574d;
  --accent-gradient: linear-gradient(to right, var(--accent), var(--accent-light));
  --accent-gradient-dark: linear-gradient(to right, var(--accent-dark), var(--accent-darker));
 }

 html {
  height: 100dvh;
  width: 100vw;
 }

 body {
  height: 100%;
  width: 100%;
  font-family: 'Playfair Display', serif;
  font-optical-sizing: auto;
  font-style: normal;
  background: #faf9f7;
  background: var(--accent-gradient);
  padding: 0;
  margin: 0;
 }

 .inline-stack {
  display: flex;
  gap: 24px;
 }

 .block-stack {
  display: grid;
  gap: 24px;
 }
</style>
